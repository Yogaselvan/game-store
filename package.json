{
  "name": "eneba-game-search",
  "version": "1.0.0",
  "description": "Game search web application for Eneba internship assignment",
  "main": "server/index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ..",
    "start": "npm run build && node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "setup": "node server/setup.js"
  },
  "keywords": ["games", "search", "react", "node"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.7",
    "fuse.js": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
